{
  "system": "MediPlus Healthcare Monitoring Platform",
  "version": "2.0.0",
  "created": "2025-01-04",
  "features": {
    "vitalsMonitoring": {
      "enabled": true,
      "metrics": ["temperature", "heartRate", "bloodPressure", "oxygenLevel"],
      "realTime": true,
      "sosAlerts": true
    },
    "medicationManagement": {
      "enabled": true,
      "reminders": true,
      "scheduling": true,
      "adherenceTracking": true
    },
    "fhirIntegration": {
      "enabled": true,
      "version": "4.0.1",
      "patientData": true,
      "interoperability": true
    },
    "emergencyAlerts": {
      "enabled": true,
      "emailNotifications": true,
      "pushNotifications": true,
      "criticalThresholds": true
    }
  },
  "integrations": {
    "supabase": {
      "database": true,
      "authentication": true,
      "realTimeUpdates": true
    },
    "gmail": {
      "smtp": true,
      "sosAlerts": true,
      "medicalNotifications": true
    },
    "firebase": {
      "pushNotifications": true,
      "serviceWorker": true,
      "backgroundSync": true
    }
  },
  "compliance": {
    "hipaa": "compliant",
    "fhir": "4.0.1",
    "medicalStandards": "ISO 27799",
    "dataProtection": "GDPR"
  }
}